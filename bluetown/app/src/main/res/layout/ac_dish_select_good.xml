<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EEED"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_resaust_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="110dip"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:cacheColorHint="#00000000"
        android:divider="@color/compnay_detail_divier"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:id="@+id/ll_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg_color"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_food_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="共计4个菜"
                android:textColor="@color/orange_darker_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_food_orginal_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="￥120.00"
                android:visibility="gone"
                android:textColor="@color/orange_darker_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_food_new_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="￥120.00"
                android:textColor="@color/orange_darker_color"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_resaustgood_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/blue_darker_btn_bg"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>