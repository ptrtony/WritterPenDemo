<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/merchantCoverImg"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_msg_empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_15" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/merchantShopName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <ImageView
                    android:id="@+id/collectShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_merchant_collect" />
            </LinearLayout>

            <TextView
                android:id="@+id/canteenPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray_btn"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/businessTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray_btn"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/canteenDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textColor="@color/gray_btn"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mark"
                android:drawablePadding="@dimen/margin_10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/shop_gallery"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/compnay_detail_divier" />

            <HorizontalScrollView
                android:id="@+id/horizontallistview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/shopImgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/orderBookLy"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:visibility="gone" >
                <Button
                    android:id="@+id/order"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1.0"
                    android:background="@drawable/blue_darker_btn_bg"
                    android:text="@string/order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />

                <Button
                    android:id="@+id/bookSeat"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_weight="1.0"
                    android:background="@drawable/red_darker_btn_bg"
                    android:text="@string/book_seat"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_16" />

                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/merchantInfoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mark"
                android:drawablePadding="@dimen/margin_10"
                android:ellipsize="end"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:text="@string/dailry_dishes"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compnay_detail_divier" />

            <LinearLayout
                android:id="@+id/recommendishesLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10" >

                <ImageView
                    android:id="@+id/todayDishImg"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_msg_empty" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/dishName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/dishPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableRight="@drawable/ic_more_gray"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/font_light_red"
                        android:textSize="@dimen/font_size_16" />

                    <ImageView
                        android:id="@+id/priase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:src="@drawable/ic_priase_red" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compnay_detail_divier" />

            <TextView
                android:id="@+id/merchantAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location1"
                android:drawablePadding="@dimen/margin_10"
                android:drawableRight="@drawable/ic_more_gray"
                android:ellipsize="end"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compnay_detail_divier" />

            <TextView
                android:id="@+id/merchantPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_tel"
                android:drawablePadding="@dimen/margin_8"
                android:drawableRight="@drawable/ic_phone_gray"
                android:ellipsize="end"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentTitleLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/merchantCommentCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mark"
                android:drawablePadding="@dimen/margin_10"
                android:ellipsize="end"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compnay_detail_divier" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_comment"
                android:background="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>