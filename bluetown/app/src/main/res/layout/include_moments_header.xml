<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@color/white">
    <com.android.bluetown.view.RoundedImageView
        android:id="@+id/iv_head_nick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_nick_head"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_circle_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head_nick"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:text="haha"/>

    <TextView
        android:id="@+id/tv_circle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head_nick"
        android:layout_below="@+id/tv_circle_nick"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_888788"
        android:textSize="12sp"
        android:text="2018-05-20"
        android:layout_marginTop="3dp"/>
</RelativeLayout>
