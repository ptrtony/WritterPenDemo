    <!--android:src="@drawable/icon_clear"-->
    <!--android:layout_marginTop="@dimen/y16"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginRight="@dimen/x23"-->
    <!--android:visibility="gone"/>-->
    <View
        android:id="@+id/view_divider_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@+id/account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white_50"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@null"
        android:hint="@string/password1"
        android:inputType="textPassword"
        android:maxLength="16"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textColorHint="@color/white_50"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/view_divider_account"
        android:layout_toLeftOf="@+id/iv_invisible_password"/>

    <ImageView
        android:id="@+id/iv_invisible_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/view_divider_account"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="46dp"
        android:src="@drawable/icon_visibility_off"/>
    <View
        android:id="@+id/view_divider_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/white_50"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/password"/>
    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_unclick_button"
        android:text="@string/login"
        android:textColor="@color/app_blue"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/view_divider_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/register"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_register_button"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/view_divider_password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

