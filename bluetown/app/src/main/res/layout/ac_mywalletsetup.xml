<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/authentication_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/change_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/white"
        android:drawablePadding="@dimen/margin_10"
        android:drawableRight="@drawable/im_personal_main_enter_icon"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10"
        android:text="@string/change_pay_psw"
        android:textColor="@color/font_black"
        android:textSize="@dimen/title_font_size_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/white"
        android:padding="@dimen/margin_10" >

        <TextView
            android:id="@+id/hideView"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/small_pay"
            android:textColor="@color/font_black"
            android:textSize="@dimen/title_font_size_16" />

        <com.android.bluetown.view.SwitchView
            android:id="@+id/view_switch"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/margin_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/no_psw_pay"
            android:textColor="@color/font_black"
            android:textSize="@dimen/title_font_size_16" />

        <TextView
            android:id="@+id/tv_no_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_10"
            android:drawableRight="@drawable/im_personal_main_enter_icon"
            android:gravity="right"
            android:textColor="@color/font_orange"
            android:textSize="@dimen/title_font_size_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:text="@string/small_pay_info" />

</LinearLayout>