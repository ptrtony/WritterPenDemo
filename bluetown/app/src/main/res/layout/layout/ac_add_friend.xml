<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.android.bluetown.sortlistview.ClearEditText
                android:id="@+id/searchContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="35dip"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_14" 
                android:hint="@string/search_friend_hint1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compnay_show_type_tag_stroke" />
        </LinearLayout>

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/chat_add_friend_btn_bg"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nearlyPersonLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10" >

        <TextView
            android:id="@+id/nearlyPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/margin_10"
            android:text="@string/nearly_person"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

</LinearLayout>