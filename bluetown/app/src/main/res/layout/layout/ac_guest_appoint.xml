<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/canApponitDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/tip_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_10"
                android:text="@string/appoint_tip"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/remindCarport"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_size_14"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/white"
                android:padding="@dimen/margin_20" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/margin_10" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/guest_name"
                        android:textColor="#616161" />

                    <EditText
                        android:id="@+id/tv_company2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请输入访客姓名"
                        android:textColor="@color/black"
                        android:textColorHint="@color/font_hint"
                        android:textSize="14sp" >
                    </EditText>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/app_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_10" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/link_method"
                        android:textColor="#616161" />

                    <EditText
                        android:id="@+id/tv_company3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView2"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请输入访客手机号"
                        android:textColor="@color/black"
                        android:textColorHint="@color/font_hint"
                        android:textSize="14sp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dealDateLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/white"
                android:padding="@dimen/margin_20" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="选择时间"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:drawableRight="@drawable/date_ac_guest_appoint"
                    android:gravity="center"
                    android:text="选择预约时间"
                    android:textColor="@color/font_hint"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/car_num_1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入车牌号"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/app_bg" />

                <EditText
                    android:id="@+id/tv_company4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入车牌号"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_carnum"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/tv_company5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入车牌号"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/app_bg" />

                <EditText
                    android:id="@+id/tv_company6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入车牌号"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="@string/appoint_persons"
                android:textColor="@color/black" />

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <antistatic.spinnerwheel.WheelHorizontalView
                    android:id="@+id/people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_00" />
            </RelativeLayout>
           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/margin_10"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="备注"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/title_font_size_16" />

                <EditText
                    android:id="@+id/faultContent"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/white"
                    android:gravity="top"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/appointinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:gravity="center_vertical"
                android:text="@string/appoint_system_tip"
                android:textColor="@color/font_gray"
                android:visibility="invisible"
                android:textSize="@dimen/font_size_14" />

            <Button
                android:id="@+id/appointCommit"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/blue_darker_btn_bg"
                android:text="@string/commit"
                android:textColor="@color/white"
                android:textSize="@dimen/title_font_size_16" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>