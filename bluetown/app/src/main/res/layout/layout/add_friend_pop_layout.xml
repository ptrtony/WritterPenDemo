<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/groupInfoLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/margin_20" >

            <com.android.bluetown.view.RoundedImageView
                android:id="@+id/userImg"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_msg_empty" />

            <LinearLayout
                android:id="@+id/addInfoLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/userImg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/friendInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_20" />

                <TextView
                    android:id="@+id/addFriendInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/title_font_size_16" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/compnay_show_type_tag_stroke" />

        <Button
            android:id="@+id/sendAddInfo"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/transparent"
            android:text="@string/send"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/title_font_size_16" />
    </LinearLayout>

</LinearLayout>