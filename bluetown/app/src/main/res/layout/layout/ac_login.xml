<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_15" >

    <EditText
        android:layout_marginTop="@dimen/margin_30"
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableBottom="@drawable/edittext_line"
        android:drawableLeft="@drawable/ic_user_big"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/mobile_hint"
        android:inputType="number"
        android:maxLength="11"
        android:paddingTop="@dimen/margin_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_size_14" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableBottom="@drawable/edittext_line"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:maxLength="16"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_size_14" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/red_darker_btn_bg"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/title_font_size_16" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/blue_darker_btn_bg"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/title_font_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/rememberPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:button="@drawable/check_box_selector"
            android:text="@string/remember_password"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12"
            android:visibility="invisible"
             />

        <TextView
            android:id="@+id/forgetPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="0.5"
            android:gravity="right|center"
            android:text="@string/forget_password"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

</LinearLayout>