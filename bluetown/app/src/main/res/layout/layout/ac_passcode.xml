<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/empty_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="20dp"
            android:text="认证用户可使用通行码（只用于园区公司所在楼层门禁），请前往认证"
            android:textColor="#b2b2b2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15"
            android:background="@drawable/yuanjiao_blue"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="立刻认证"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_qr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_bg_blue"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/passcode_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my_QR"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/passcode_bg" />

            <TextView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="点击刷新"
                android:textColor="@color/app_blue" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_QR"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="只用于园区公司所在楼层门禁"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>