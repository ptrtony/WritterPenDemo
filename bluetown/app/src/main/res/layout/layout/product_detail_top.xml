<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.bluetown.view.slideview.SlidingPlayViewWithDot
            android:id="@+id/productShowView"
            android:layout_width="match_parent"
            android:layout_height="200dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:background="@color/transparent_bg"
            android:gravity="center_vertical"
            android:minHeight="25dip"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10" >

            <TextView
                android:id="@+id/productName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
		android:textColor="@color/white"
		android:maxLines="2"
		android:ellipsize="end"
		android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/font_yellow"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10" >

        <LinearLayout
            android:id="@+id/collectly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:scaleType="fitCenter"
                android:src="@drawable/collect_selector" />

            <TextView
                android:id="@+id/collectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collect"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/compnay_show_type_tag_stroke" />

        <LinearLayout
            android:id="@+id/priasely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/priase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:scaleType="fitCenter"
                android:src="@drawable/priase_selector" />

            <TextView
                android:id="@+id/priaseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priase"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/compnay_show_type_tag_stroke" />

        <LinearLayout
            android:id="@+id/commently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:scaleType="fitCenter"
                android:src="@drawable/comment_selector" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10" >

        <LinearLayout
            android:id="@+id/sellerLy"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <com.android.bluetown.view.RoundedImageView
                android:id="@+id/sellerImg"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/seller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/title_font_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/sellerTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_tel"
            android:drawablePadding="@dimen/margin_5"
            android:paddingRight="@dimen/margin_10"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/margin_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/product_intro"
            android:textColor="@color/font_black"
            android:textSize="@dimen/title_font_size_16" />

        <TextView
            android:id="@+id/productInto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_10"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/commentNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/comment_selector"
        android:drawablePadding="@dimen/margin_5"
        android:padding="@dimen/margin_10"
        android:text="@string/comment"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>