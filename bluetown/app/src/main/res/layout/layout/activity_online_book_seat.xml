<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:fadingEdge="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin_10" >

                <TextView
                    android:id="@+id/bt_onlineserver_locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_merchant"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="left|center_vertical"
                    android:text="  巴蜀大宅门（五角场万达店）"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/bt_onlineserver_Seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_table"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="left|center_vertical"
                    android:text="  散桌1-4人桌"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/bt_onlineserver_timess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_clock"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="left|center_vertical"
                    android:text="  2015-01-14 周三 17：00"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_onlineserver_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10" >

                    <EditText
                        android:id="@+id/et_online_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/ic_profile"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="丽丽"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_size_14" />

                    <com.android.bluetown.view.MyRadioGroup
                        android:id="@+id/mrg_onliner_sex"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <RadioButton
                                android:id="@+id/rb_online_women"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:background="@null"
                                android:button="@null"
                                android:checked="true"
                                android:drawableLeft="@drawable/cb_checkbox"
                                android:drawablePadding="@dimen/margin_10"
                                android:text="@string/sex_women"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/font_size_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <RadioButton
                                android:id="@+id/rb_online_men"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/cb_checkboxblue"
                                android:drawablePadding="@dimen/margin_10"
                                android:text="@string/sex_man"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/font_size_14" />
                        </RelativeLayout>
                    </com.android.bluetown.view.MyRadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/compnay_detail_divier" />

                <EditText
                    android:id="@+id/et_seat_phone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_tel_gray"
                    android:drawablePadding="@dimen/margin_5"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="@dimen/margin_10"
                    android:text="15591820830"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/compnay_detail_divier" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10" >

                    <EditText
                        android:id="@+id/et_online_teshumust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_stroke_bg"
                        android:gravity="top|left"
                        android:hint="@string/input_memo_tip"
                        android:lines="2"
                        android:minHeight="@dimen/margin_70"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/font_gray"
                        android:textColorHint="@color/compnay_show_type_tag_stroke"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_onlineserver_fenshus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_10"
                android:text="@string/earnest"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_size_14" />

            <RelativeLayout
                android:id="@+id/lv_onlineservers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.android.bluetown.view.MyRadioGroup
                    android:id="@+id/rg_onlineres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/two_line_white_bg"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_10" >

                        <RadioButton
                            android:id="@+id/cb_online_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@drawable/cb_cheboxbluelight"
                            android:drawablePadding="@dimen/margin_10"
                            android:text="只订座，不提前点菜"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_size_14" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:padding="@dimen/margin_10">

                        <RadioButton
                            android:id="@+id/cb_online_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@drawable/cb_cheboxbluelight"
                            android:drawablePadding="@dimen/margin_10"
                            android:text="提前点菜，到了等吃"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_size_14" />
                    </RelativeLayout>
                </com.android.bluetown.view.MyRadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10" >

                <com.android.bluetown.view.ListViewForScrollView
                    android:id="@+id/lv_cart_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:listSelector="@android:color/transparent" >
                </com.android.bluetown.view.ListViewForScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/continue_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/two_line_white_bg"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@drawable/arrow_left"
                android:padding="@dimen/margin_10"
                android:text="@string/continue_order"
                android:textColor="@color/title_bg_blue"
                android:textSize="@dimen/font_size_14" />

            <RelativeLayout
                android:id="@+id/rl_onlinessss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/two_line_white_bg"
                android:padding="@dimen/margin_10" >

                <TextView
                    android:id="@+id/tv_jinggaos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_attention"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="@string/please_notice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_12" />

                <Button
                    android:id="@+id/bt_threes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jinggaos"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="@string/dinner_tip_1"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <Button
                    android:id="@+id/bt_ones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_threes"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="@string/dinner_tip_2"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <Button
                    android:id="@+id/bt_twos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_ones"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="@string/dinner_tip_3"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:background="@drawable/two_line_white_bg" >

        <TextView
            android:id="@+id/tv_online_total"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="总计：5.00元"
            android:textColor="@color/font_light_red"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/bt_onlinerserver_sures"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/blue_darker_btn_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/pay_deposit"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</LinearLayout>