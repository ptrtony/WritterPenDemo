<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/compnay_show_type_tag_stroke" />

    <me.next.tagview.TagCloudView
        android:id="@+id/tag_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tcvBackground="@drawable/background_tag_selector"
        app:tcvBorder="8dp"
        android:background="@color/white"
        app:tcvCanTagClick="false"
        app:tcvItemBorderHorizontal="15dp"
        app:tcvItemBorderVertical="15dp"
        app:tcvSingleLine="false"
        app:tcvTagResId="@layout/item_tag_style"
        app:tcvTextColor="@color/compnay_show_type_tag_text_bg" />

    <LinearLayout
        android:id="@+id/typeBlankLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_bg"
        android:orientation="vertical" />

</LinearLayout>