<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="1000dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >
        <Button
            android:id="@+id/gender_boy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_white_top_round_selector"
            android:text="@string/gender_boy"
            android:textColor="@color/title_bg_blue"
            android:textSize="@dimen/title_font_size_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lines_color"
            />
          <Button
            android:id="@+id/gender_girl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_white_bottom_round_selector"
            android:text="@string/gender_girl"
            android:textColor="@color/title_bg_blue"
            android:textSize="@dimen/title_font_size_16" 
            android:paddingBottom="10dp"
            />
          <Button
            android:id="@+id/choose_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/bg_white_selector"
            android:text="@string/cancel"
            android:textColor="@color/title_bg_blue"
            android:textSize="@dimen/title_font_size_16" />

         
    </LinearLayout>

</LinearLayout>