<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_50"
    android:background="@color/app_blue"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/titleLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/back"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:onClick="onBack"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="返回"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/titleImgLeft"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone"
        />

    <AutoCompleteTextView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="55dp"
        android:layout_weight="1.0"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/ic_search"
        android:hint="@string/index_search_content"
        android:paddingLeft="10dp"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />
 

    <TextView
        android:id="@+id/titleMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/title_font_size_16" />

    <Button
        android:id="@+id/titleRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" 
        android:minWidth="@dimen/margin_40"
        />
     <ImageView
        android:id="@+id/titleImageRight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/titleImageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>