<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15" >

    <EditText
        android:id="@+id/mobileNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@null"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/mobile_hint"
        android:inputType="number"
        android:maxLength="11"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lines_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/verifyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/ic_dial"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/msg_verify_code_hint"
                android:inputType="number"
                android:maxLength="8"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines_color" />
        </LinearLayout>

        <com.android.bluetown.view.TimeButton
            android:id="@+id/sengVerifyCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="0.4"
            android:background="@drawable/dark_blue_btn_bg"
            android:singleLine="true"
            android:text="@string/get_msg_verify_code"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/verify_tip"
        android:textColor="@color/gray_btn_bg_color"
        android:textSize="@dimen/font_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/registerPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_selector"
            android:gravity="center"
            android:text="@string/i_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/userPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/register_pro_name"
            android:textColor="@color/orange_darker_color"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/red_darker_btn_bg"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/title_font_size_16" />

</LinearLayout>