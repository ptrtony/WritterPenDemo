<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_10" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/yuan_top" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dot1"
                    android:layout_alignRight="@+id/dot1"
                    android:layout_below="@+id/dot1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/serviceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/dot1"
                    android:text="@string/service_details"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/faultStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/serviceDetails"
                    android:gravity="right"
                    android:text="@string/un_deal_with"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/faultServiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceDetails"
                    android:layout_below="@+id/serviceDetails"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/serviceDetails"
                    android:layout_below="@+id/faultServiceDate"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/deal_service_line_d" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/serviceTypeDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceTypeDot"
                    android:layout_alignRight="@+id/serviceTypeDot"
                    android:layout_below="@+id/serviceTypeDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/serviceTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/serviceTypeDot"
                    android:text="@string/self_service_type_title"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/serviceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceTypeTitle"
                    android:layout_below="@+id/serviceTypeTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_bag"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dateDot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dateDot2"
                    android:layout_alignRight="@+id/dateDot2"
                    android:layout_below="@+id/dateDot2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/serviceDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/dateDot2"
                    android:text="@string/history_service_date"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/serviceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceDateTitle"
                    android:layout_below="@+id/serviceDateTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/serviceTimeDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceTimeDot"
                    android:layout_alignRight="@+id/serviceTimeDot"
                    android:layout_below="@+id/serviceTimeDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/serviceTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/serviceTimeDot"
                    android:text="@string/history_service_time"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/serviceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceTimeTitle"
                    android:layout_below="@+id/serviceTimeTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/serviceAddressDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceAddressDot"
                    android:layout_alignRight="@+id/serviceAddressDot"
                    android:layout_below="@+id/serviceAddressDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/serviceAddressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/serviceAddressDot"
                    android:text="@string/address"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/serviceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/serviceAddressTitle"
                    android:layout_below="@+id/serviceAddressTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_home"
                    android:drawablePadding="@dimen/margin_5"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/servicePhoneDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/servicePhoneDot"
                    android:layout_alignRight="@+id/servicePhoneDot"
                    android:layout_below="@+id/servicePhoneDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/servicePhoneTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/servicePhoneDot"
                    android:text="@string/history_service_phone"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/servicePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/servicePhoneTitle"
                    android:layout_below="@+id/servicePhoneTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_phones"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/faultExplainTitleDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/faultExplainTitleDot"
                    android:layout_alignRight="@+id/faultExplainTitleDot"
                    android:layout_below="@+id/faultExplainTitleDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/faultExplainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/faultExplainTitleDot"
                    android:text="@string/fault_explain"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/faultExplain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/faultExplainTitle"
                    android:layout_below="@+id/faultExplainTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_explain"
                    android:drawablePadding="@dimen/margin_5"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/faultImgDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <View
                    android:id="@+id/faultImgTimeDivide"
                    android:layout_width="2.5dip"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/faultImgLy"
                    android:layout_alignLeft="@+id/faultImgDot"
                    android:layout_below="@+id/faultImgDot"
                    android:layout_marginLeft="3dip"
                    android:background="@color/deal_service_line_left_color"
                    android:minHeight="130dip"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/faultImgTimeDivide1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/faultImgDot"
                    android:layout_alignRight="@+id/faultImgDot"
                    android:layout_below="@+id/faultImgDot"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deal_service_line_left" />

                <TextView
                    android:id="@+id/faultImgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/faultImgDot"
                    android:text="@string/fault_img"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/faultImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/faultImgTitle"
                    android:layout_below="@+id/faultImgTitle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableLeft="@drawable/ic_pic"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:text="@string/dealed"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10"
                    android:visibility="gone" />

                <com.android.bluetown.view.NoScrollGridView
                    android:id="@+id/faultImgLy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/faultImgTitle"
                    android:layout_below="@+id/faultImgTitle"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/margin_10"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/margin_10"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dealFeedbackLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/dealFeedbackDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_time_dot" />

                <View
                    android:layout_width="2.5dip"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/dealFeedbackDot"
                    android:layout_below="@+id/dealFeedbackDot"
                    android:layout_marginLeft="3dip"
                    android:background="@color/deal_service_line_left_color"
                    android:minHeight="109dip" />

                <TextView
                    android:id="@+id/dealFeedbackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/dealFeedbackDot"
                    android:text="@string/deal_with_feedback"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/dealFeedbackDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dealFeedbackTitle"
                    android:layout_below="@+id/dealFeedbackTitle"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/deal_with_date"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />

                <View
                    android:id="@+id/dealFeedbackDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/dealFeedbackTitle"
                    android:layout_below="@+id/dealFeedbackDate"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/deal_service_line_d" />

                <TextView
                    android:id="@+id/dealFeedbackContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dealFeedbackTitle"
                    android:layout_below="@+id/dealFeedbackDivider"
                    android:layout_marginTop="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_explain"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="@string/feedback_content"
                    android:textColor="@color/compnay_show_type_tag_text_bg"
                    android:textSize="@dimen/font_size_10" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/handleScoreLy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_5"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/handleScoreDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:scaleType="fitCenter"
                android:src="@drawable/time_dot" />

            <ImageView
                android:id="@+id/handleScoreLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/handleScoreDot"
                android:layout_alignRight="@+id/handleScoreDot"
                android:layout_below="@+id/handleScoreDot"
                android:scaleType="fitCenter"
                android:src="@drawable/deal_service_line_left" />

            <TextView
                android:id="@+id/handleScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/handleScoreDot"
                android:text="@string/handle_score"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_size_14" />

            <RadioGroup
                android:id="@+id/handleScoreRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/handleScoreLine"
                android:layout_alignLeft="@+id/handleScoreTitle"
                android:layout_alignTop="@+id/handleScoreDot"
                android:layout_below="@+id/handleScoreTitle"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@drawable/orager_dian_radio_selector"
                    android:checked="true"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="@string/five_fen"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <RadioButton
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@drawable/orager_dian_radio_selector"
                    android:checked="false"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="@string/four_fen"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@drawable/orager_dian_radio_selector"
                    android:checked="false"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="@string/three_fen"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:button="@drawable/orager_dian_radio_selector"
                    android:checked="false"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="@string/two_fen"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:button="@drawable/orager_dian_radio_selector"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="@string/one_fen"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_14" />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/dealCommit"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/blue_darker_btn_bg"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size_16"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>