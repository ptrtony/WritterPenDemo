<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">
    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:id="@+id/rl_small_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_status_bar">

        <ImageView
            android:id="@+id/saoma"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_saoma"/>

        <ImageView
            android:id="@+id/paycode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_paycode"
            android:layout_toRightOf="@+id/saoma"/>


        <ImageView
            android:id="@+id/passcode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_passcode"
            android:layout_toRightOf="@+id/paycode"/>


        <ImageView
            android:id="@+id/puls"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/puls"/>


    </RelativeLayout>

    <View
        android:id="@+id/v_toolbar_small_mask"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/transparent"
        android:focusable="false"/>
</RelativeLayout>
