<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/authentication_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_10" >

        <TextView
            android:id="@+id/buy_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yuanjiao_orange"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:text="购买"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buy_one"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="包月车位(1个月)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/buy_one"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="¥150"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="1dp" >

        <TextView
            android:id="@+id/buy_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yuanjiao_orange"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:text="购买"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buy_three"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="包季车位(3个月)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/buy_three"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="¥350"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:text="包月成功后，不用再担心车子的停放问题。开通的时长从开通次日起。如有疑问，请联系客服电话400-0909-08。"/>

</LinearLayout>
